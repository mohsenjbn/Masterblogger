@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="featured-posts">
    <div class="section-title">
        <h2><span>Featured</span></h2>
    </div>
    <div class="card-columns listfeaturedtag">

        @foreach (var article in Model.Articles)
        {
            <div class="card">
                <div class="row">
                    <div class="col-md-5 wrapthumbnail">
                        <a  asp-page="/ArticleDetail/Index" asp-route-id="@article.Id" >
                            <div class="thumbnail" style="background-image:url(@article.Image);">
                            </div>
                        </a>
                    </div>
                    <div class="col-md-7">
                        <div class="card-block">
                            <h2 class="card-title"><a  asp-page="/ArticleDetail/Index" asp-route-id="@article.Id">@article.Name</a></h2>
                            <h4 class="card-text">@article.ShortDescribtion</h4>
                            <div class="metafooter">
                                <div class="wrapfooter">

                                    <span class="author-meta">
                                        <span class="post-name"><a asp-page="/ArticleDetail/Index" asp-route-id="@article.Id">@article.CategoryName</a></span><br />
                                        <span class="post-date">@article.CreationDate</span><span class="dot"></span><span class="post-read">@article.CreationDate</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }



    </div>
</section>
